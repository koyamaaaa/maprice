<%= form_with model: @user, url: '/admin_menu/users/signup', method: :post, local: true do |f| %>
  <%= f.label :name, 'ユーザー名' %>
  <%= f.text_field :name %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation, '確認' %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit '登録' %>
<% end %>