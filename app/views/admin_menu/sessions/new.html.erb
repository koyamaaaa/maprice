<h1>ログイン</h1>
<%= form_with model: @session, url: login_path, local: true do |f| %>
  <%= f.label :name , 'ユーザー名' %>
  <%= f.text_field :name %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>

  <%= f.label :password, 'パスワード' %>
  <%= f.text_field :password %>

  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>
  <span>次回以降ログインした状態にする</span>

  <%= f.submit 'login' %>
<% end %>