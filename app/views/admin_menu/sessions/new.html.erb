<h1>ログイン</h1>
<%= form_with model: @session, url: login_path, local: true do |f| %>

<div class="admin">
  <%= f.label :name , 'ユーザー名' %>
  <%= f.text_field :name %>
</div>

<div class="admin">
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>
</div>

<div class="admin">
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
</div>

<div class="admin">
  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>
  <span>次回以降ログインした状態にする</span>
</div>

<%= f.submit 'login' %>
<% end %>