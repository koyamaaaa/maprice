<%= form_with model: @device do |f| %>

  <%= f.label :name, '端末名' %>
  <%= f.text_field :name %> 

  <%= f.label :device_price, '端末料金' %>
  <%= f.text_field :device_price %> 

  <%= f.label :service_id, 'サービス名' %>
  <%= f.collection_select :service_id, Service.all, :id, :name %> 

  <%= f.submit %>
<% end %>

<%= link_to '新規作成', new_device_path %>
<%= link_to '削除', device_path(@device), method: :delete, data: { confirm: '本当に削除しますか？' } %>