<%= form_with model: @campaign do |f| %>

  <%= f.label :name, 'キャンペーン' %>
  <%= f.text_field :name %>

  <%= f.label :cp_content, 'キャンペーン内容' %>
  <%= f.text_field :cp_content %>

  <%= f.label :provider_id, 'プロバイダー' %>
  <%= f.collection_select :provider_id, Provider.all, :id, :name, { include_blank: '未選択' } %>

  <%= f.submit %>
<% end %>

<%= link_to '新規作成', new_campaign_path %>
<%= link_to '削除', campaign_path(@campaign), method: :delete, data: { confirm: '関連プランも削除されます。本当に削除しますか？' } %>